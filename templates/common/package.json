{
  "name": "<%= compName %>",
  "author": "<%= authorName %> <<%= authorEmail %>>",
  "version": "<%= compVersion %>",
  "description": "<%= compDescription %>",
  "main": "src/<%= compName %>.js",
  "scripts": {
    "start": "gulp",
    "test": "karma start",
    "test:watch": "karma start --no-single-run",
    "docs": "npm run sassdocs && npm run jsdocs && npm run esdocs",
    "esdocs": "esdoc -c .esdoc.json",
    "sassdocs": "sassdoc src/scss",
    "jsdocs": "node_modules/.bin/jsdoc --configure .jsdoc.json --verbose",
    "preinstall": "npm i -g gulp karma-cli",<% if(cssProcessor === 'libSass') { %>
    "postinstall": "gem update && gem install scss_lint"<% } %><% if(cssProcessor === 'compass') { %>
    "postinstall": "gem update && gem install compass susy modular-scale breakpoint scss_lint font-awesome-sass"<% } %>
  },
  "browserify": {
    "transform": [
      ["babelify"]
    ]
  },
  "devDependencies": <%= npmDevDependencies %>,
  "dependencies": <%= npmDependencies %>
}
